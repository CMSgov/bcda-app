#! /bin/bash -
#
# A script to copy files with the extension .encrypted to files without that extension
#
# Usage:
# In the root project directory:
#   $ ./ops/copy.encrypted shared_files/config

ret=0
re='^(.+).encrypted$'
for file do
  if [[ $file =~ $re ]]; then
    cp -- "$file" "${BASH_REMATCH[1]}" || ret=$?
  else
    printf >&2 '%s\n' "$0: Info: ignoring $file"
  fi
done
exit "$ret"
