FROM golang:1.15-alpine3.12

RUN apk update upgrade
RUN apk add git build-base gcc

RUN go get -u github.com/go-swagger/go-swagger/cmd/swagger

WORKDIR /go/src/github.com/CMSgov/bcda-app

# Download swagger UI and update references to our swagger.json files
RUN wget --directory-prefix=/tmp https://github.com/swagger-api/swagger-ui/archive/v3.38.0.zip
RUN unzip /tmp/v3.38.0.zip -d /tmp && \
    sed -i 's/https:\/\/petstore.swagger.io\/v2\/swagger.json/.\/swagger.json/g' /tmp/swagger-ui-3.38.0/dist/index.html && \
    sed -i 's/\(url: "\.\/swagger\.json",\)/\1tagsSorter:\"alpha\",/g' /tmp/swagger-ui-3.38.0/dist/index.html

WORKDIR /go/src/github.com/CMSgov/bcda-app/bcda

# Since the UI references a single swagger spec, we need to include the swagger UI for V1 API.
# The full spec (v1 + v2) is created at the root of swaggerui to allow us to continue to build a complete OpenAPI file
# TODO (BCDA-4109) - Remove generating the swagger UI specific to v1 API
CMD mkdir -p swaggerui/v1 && \
    cp -r /tmp/swagger-ui-3.38.0/dist/* swaggerui/v1/ && \
    cp -r /tmp/swagger-ui-3.38.0/dist/* swaggerui/ && \
    swagger generate spec -o swaggerui/v1/swagger.json -m --include-tag metadata --include-tag bulkData --include-tag auth && \
    swagger generate spec -o swaggerui/swagger.json -m