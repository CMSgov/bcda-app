FROM golang:1.15-alpine3.12

RUN apk update upgrade
RUN apk add git entr bash

WORKDIR /go/src/github.com/CMSgov/bcda-app
COPY . .

RUN cat tools.go | awk '/[\/\/] bcda/{flag=1; next} /[\/\/] end/{flag=0} flag' | awk -F '"' '{print $2}' | xargs -tI % go get %  

WORKDIR /go/src/github.com/CMSgov/bcda-app/bcdaworker
RUN go build

CMD ["../watch.sh", "worker", "main.go", "health.go"]
